{
  "name": "pos-eso-css-starter-kit",
  "version": "0.1.0",
  "description": "Another post css starter kit",
  "main": "index.js",
  "scripts": {
    "start": "postcss ./src/index.css --use postcss-preset-env postcss-import postcss-extend autoprefixer --output ./public/pos-css-starter.css --watch",
    "build:dist": "postcss ./src/index.css --use postcss-preset-env postcss-import postcss-extend autoprefixer --output ./dist/pos-css-starter.css",
    "build": "npm run build:dist && npm run format:dist",
    "format:src": "npx stylelint --fix 'src/**/*.css'",
    "format:dist": "npx stylelint --fix 'dist/**/*.css'",
    "lint": "npx stylelint 'src/**/*.css'"
  },
  "author": "https://github.com/javierlopezdeancos",
  "license": "gpl-2.0",
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "cssnano": "^5.0.2",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^14.0.1",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  }
}
